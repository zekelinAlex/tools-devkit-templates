{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.View",
  "name": "Power Platform: View",
  "shortName": "pp-entity-view",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "customentity",
  "preferNameDirectory": false,
  "symbols": {
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": ".",
      "replaces": "SolutionDeclarationsRoot",
      "fileRename": "SolutionDeclarationsRoot",
      "description": "Path to the solution root directory"
    },
    "DisplayName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "Generated",
      "replaces": "viewexamplename",
      "description": "Display name of the view"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "exampleexistingentity",
      "fileRename": "exampleexistingentity",
      "description": "Schema name of the entity including publisher prefix (Example: new_customentity)"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "fileRename": "examplepublisherprefix",
      "description": "Publisher prefix of the entity"
    },
    "ViewId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "defaultValue": "customViewIdexample",
      "replaces": "customViewIdexample",
      "description": "GUID of the specific view where the cell will be added"
    }
  },
	"postActions": [
		{
			"actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
			"args": {
				"executable": "pwsh",
				"args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/SetFormId.ps1\"",
				"redirectStandardOutput": "false"
			},
			"manualInstructions": [
				{
					"text": "Setting form ID"
				}
			],
			"continueOnError": false,
			"description": "Setting form ID"
		},
		{
			"actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
			"args": {
				"executable": "pwsh",
				"args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
				"redirectStandardOutput": "false"
			},
			"manualInstructions": [
				{
					"text": "Removing Scripts"
				}
			],
			"continueOnError": false,
			"description": "Removing Scripts"
		}
	]
}