{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.View",
  "name": "Power Platform: View",
  "shortName": "pp-entity-view",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "customentity",
  "preferNameDirectory": false,
  "symbols": {
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": ".",
      "replaces": "SolutionDeclarationsRoot",
      "fileRename": "SolutionDeclarationsRoot",
      "description": "Path to the solution root directory"
    },
    "DisplayName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "Generated",
      "replaces": "viewexamplename",
      "description": "Display name of the view"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "exampleexistingentity",
      "fileRename": "exampleexistingentity",
      "description": "Schema name of the entity including publisher prefix (Example: new_customentity)"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "fileRename": "examplepublisherprefix",
      "description": "Publisher prefix of the entity"
    },
    "CustomViewIdgenerated": {
      "type": "generated",
      "generator": "guid",
      "condition": "(CustomViewId == \"\")",
      "replaces": "customViewIdexample",
      "fileRename": "customViewIdexample",
      "parameters": {
        "defaultFormat": "d"
      }
    },
    "ViewId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "customViewIdexample",
      "replaces": "customViewIdexample",
      "description": "GUID of the specific view where the cell will be added"
    }
  }
}