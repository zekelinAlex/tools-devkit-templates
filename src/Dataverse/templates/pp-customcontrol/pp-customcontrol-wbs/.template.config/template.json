{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Controls.CustomControl.Wbs",
  "name": "Power Platform: WBS",
  "shortName": "pp-customcontrol-wbs",
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "symbols": {
    "CustomControl_BindingField": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "bindingfieldexampletypesinglelinetext",
      "fileRename": "bindingfieldexampletypesinglelinetext",
      "description": "A binding field to bind the control to.",
      "isRequired": true
    },
    "CustomControl_ProjectProjectDetail": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Project"
        },
        {
          "choice": "Project Detail"
        }
      ],
      "description": "Specifies whether the form is binded to Project or Project Detail.  (Project: Project; Project Detail: Project)",
      "isRequired": true
    },
    "projectprojectdetailvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "modeexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(ProjectProjectDetail == \u0022Project\u0022)",
            "value": "_talxis_projectid_value"
          },
          {
            "condition": "(ProjectProjectDetail == \u0022Project Detail\u0022)",
            "value": "_talxis_projectdetailid_value"
          }
        ]
      },
      "description": "Specifies whether the form is binded to Project or Project Detail.  automatically selected based on ProjectProjectDetail"
    },
    "CustomControl_ObjectId": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "objectidexampletypesinglelinetext",
      "fileRename": "objectidexampletypesinglelinetext",
      "description": "Specifies the id of current Project/Project Detail.",
      "isRequired": true
    },
    "CustomControl_ObjectName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "objectnameexampletypesinglelinetext",
      "fileRename": "objectnameexampletypesinglelinetext",
      "description": "Specifies the name of current Project/Project Detail.",
      "isRequired": true
    },
    "CustomControl_GanttItemFieldName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "ganttitemfieldnameexampletypesinglelinetext",
      "fileRename": "ganttitemfieldnameexampletypesinglelinetext",
      "description": "Name of field to be displayed in Gannt.",
      "isRequired": true
    },
    "CustomControl_GroupTasksByFields": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "grouptasksbyfieldsexampletypesinglelinetext",
      "fileRename": "grouptasksbyfieldsexampletypesinglelinetext",
      "description": "Comma separated fields to group tasks togethere."
    },
    "CustomControlFormFactor": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "customcontrolformfactorexample",
      "description": "Form factor for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "ControlId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "controlDescriptionIdexample",
      "description": "Control ID for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "description": "Publisher prefix for the custom control"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the control will be created"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the parameters will be added"
    }
  },
  "postActions": [
