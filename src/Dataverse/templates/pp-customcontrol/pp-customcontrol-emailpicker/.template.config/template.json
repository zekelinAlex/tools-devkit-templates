{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Controls.CustomControl.Emailpicker",
  "name": "Power Platform: EmailPicker",
  "shortName": "pp-customcontrol-emailpicker",
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "symbols": {
    "CustomControl_EmailDataField": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "dataexampletypesinglelinetext",
      "fileRename": "dataexampletypesinglelinetext",
      "description": "Binding field containing array of e-mail objects.",
      "isRequired": true
    },
    "CustomControl_EntityName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "entitynameexampletypesinglelinetext",
      "fileRename": "entitynameexampletypesinglelinetext",
      "description": "Entity name of the record the EmailPicker is on. REQUIRED IF VERIFICATION FEATURE IS ON."
    },
    "CustomControl_RecordId": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "recordidexampletypesinglelinetext",
      "fileRename": "recordidexampletypesinglelinetext",
      "description": "Primary key of the record the EmailPicker is on. REQUIRED IF VERIFICATION FEATURE IS ON."
    },
    "CustomControl_ContactFetchXml": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "contactsuggestionfetchxmlexampletypesinglelinetext",
      "fileRename": "contactsuggestionfetchxmlexampletypesinglelinetext",
      "description": "FetchXml that will replace default for filtering contact email suggestions"
    },
    "CustomControl_AccountFetchXml": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "accountsuggestionfetchxmlexampletypesinglelinetext",
      "fileRename": "accountsuggestionfetchxmlexampletypesinglelinetext",
      "description": "FetchXml that will replace default for filtering account email suggestions"
    },
    "CustomControl_MinimalEmailCount": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "minemailcountexampletypewholenone",
      "fileRename": "minemailcountexampletypewholenone",
      "description": "How many emails are required."
    },
    "CustomControl_MaximalEmailCount": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "maxemailcountexampletypewholenone",
      "fileRename": "maxemailcountexampletypewholenone",
      "description": "How many emails can be inputted."
    },
    "CustomControl_MinimalVerifiedEmailCount": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "minverifiedcountexampletypewholenone",
      "fileRename": "minverifiedcountexampletypewholenone",
      "description": "How many emails are required to be verified."
    },
    "CustomControl_VerificationFeature": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Disabled"
        },
        {
          "choice": "Enabled"
        }
      ],
      "description": "Do you want to enable the verification status functionality? (Disabled: Disabled; Enabled: Enabled)",
      "isRequired": true
    },
    "verificationfeaturevalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "verificationfeatureexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(VerificationFeature == \u0022Disabled\u0022)",
            "value": "0"
          },
          {
            "condition": "(VerificationFeature == \u0022Enabled\u0022)",
            "value": "1"
          }
        ]
      },
      "description": "Do you want to enable the verification status functionality? automatically selected based on VerificationFeature"
    },
    "CustomControl_EmailEdit": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Disabled"
        },
        {
          "choice": "Enabled"
        }
      ],
      "description": "Do you want to enable the email editing? (Disabled: Disabled; Enabled: Enabled)"
    },
    "emaileditvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "emaileditexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(EmailEdit == \u0022Disabled\u0022)",
            "value": "0"
          },
          {
            "condition": "(EmailEdit == \u0022Enabled\u0022)",
            "value": "1"
          }
        ]
      },
      "description": "Do you want to enable the email editing? automatically selected based on EmailEdit"
    },
    "CustomControl_EmailSuggestions": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Do you want to suggest emails from existing accounts and contacts? (True: True; False: False)"
    },
    "emailsuggestionsvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "emailsuggestionsexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(EmailSuggestions == \u0022True\u0022)",
            "value": "true"
          },
          {
            "condition": "(EmailSuggestions == \u0022False\u0022)",
            "value": "false"
          }
        ]
      },
      "description": "Do you want to suggest emails from existing accounts and contacts? automatically selected based on EmailSuggestions"
    },
    "CustomControl_EnableCopyButton": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Enable click to copy button. (True: True; False: False)"
    },
    "enablecopybuttonvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "clicktocopyenabledexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(EnableCopyButton == \u0022True\u0022)",
            "value": "true"
          },
          {
            "condition": "(EnableCopyButton == \u0022False\u0022)",
            "value": "false"
          }
        ]
      },
      "description": "Enable click to copy button. automatically selected based on EnableCopyButton"
    },
    "CustomControl_PlainEmail": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "plainemailexampletype",
      "fileRename": "plainemailexampletype",
      "description": "Binding field returning first email from \u0060E-mail Data Field\u0060 in plain text."
    },
    "CustomControlFormFactor": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "customcontrolformfactorexample",
      "description": "Form factor for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "ControlId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "controlDescriptionIdexample",
      "description": "Control ID for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "description": "Publisher prefix for the custom control"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the control will be created"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the parameters will be added"
    }
  },
