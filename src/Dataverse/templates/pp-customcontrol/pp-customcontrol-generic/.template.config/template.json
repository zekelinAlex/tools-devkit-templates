{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Controls.CustomControl.Generic",
  "name": "Power Platform: Custom Control (Generic)",
  "shortName": "pp-customcontrol-generic",
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "symbols": {
    "CustomControlName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "customcontrolnameexample",
      "description": "Full name of the PCF control (e.g., TALXIS.PCF.Checkbox, UdppControls.QuantityIndicator)"
    },
    "CustomControlParameters": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": false,
      "defaultValue": "[]",
      "replaces": "customcontrolparametersexample",
      "description": "JSON array of parameter objects. Each object: {\"name\": \"paramName\", \"type\": \"Whole.None\", \"value\": \"fieldname\"}. Example: [{\"name\": \"quantity\", \"type\": \"Whole.None\", \"value\": \"udpp_availablequantity\"}]"
    },
    "FieldLogicalName": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "fieldlogicalnameexample",
      "description": "Logical name of the field to attach the custom control to (e.g., udpp_availablequantity)"
    },
    "CustomControlFormFactor": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "0",
      "replaces": "customcontrolformfactorexample",
      "description": "Form factor for the custom control (0 = Web, 1 = Tablet, 2 = Phone)"
    },
    "ControlId": {
      "type": "generated",
      "generator": "guid",
      "parameters": {
        "defaultFormat": "d"
      },
      "replaces": "controlDescriptionIdexample",
      "description": "Auto-generated unique ID linking the control to its controlDescription"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "description": "Publisher prefix for the custom control"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the control will be created"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the parameters will be added"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/GenerateParametersXml.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Generating parameters XML from JSON"
        }
      ],
      "continueOnError": false,
      "description": "Generating parameters XML from JSON"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/RemoveUnusedNodes.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing unused nodes"
        }
      ],
      "continueOnError": false,
      "description": "Removing unused nodes"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/AddCustomControlParameters.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new parameters to custom control"
        }
      ],
      "continueOnError": false,
      "description": "Adding new parameters to custom control"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/AddEntityToSolutionXml.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new parameters to custom control"
        }
      ],
      "continueOnError": false,
      "description": "Adding new parameters to custom control"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}
