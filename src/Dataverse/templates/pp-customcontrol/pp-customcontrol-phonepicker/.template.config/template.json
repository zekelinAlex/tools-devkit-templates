{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Controls.CustomControl.Phonepicker",
  "name": "Power Platform: PhonePicker",
  "shortName": "pp-customcontrol-phonepicker",
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "symbols": {
    "CustomControl_PhoneNumber": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "phonenumberexampletype",
      "fileRename": "phonenumberexampletype",
      "description": "Phone number field",
      "isRequired": true
    },
    "CustomControl_EntityName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "entitynameexampletypesinglelinetext",
      "fileRename": "entitynameexampletypesinglelinetext",
      "description": "Entity name of the record the PhonePicker is on. REQUIRED IF VERIFICATION FEATURE IS ON."
    },
    "CustomControl_RecordId": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "recordidexampletypesinglelinetext",
      "fileRename": "recordidexampletypesinglelinetext",
      "description": "Primary key of the record the PhonePicker is on. REQUIRED IF VERIFICATION FEATURE IS ON."
    },
    "CustomControl_DefaultCountryCode": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "defaultcountrycodeexampletypesinglelinetext",
      "fileRename": "defaultcountrycodeexampletypesinglelinetext",
      "description": "Default Country code. CZ by default"
    },
    "CustomControl_PlaceholderMessage": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "placeholdermessageexampletypesinglelinetext",
      "fileRename": "placeholdermessageexampletypesinglelinetext",
      "description": "Placeholder message"
    },
    "CustomControl_VerificationFeature": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Disabled"
        },
        {
          "choice": "Enabled"
        }
      ],
      "description": "Do you want to enable the verification status functionality? (Disabled: Disabled; Enabled: Enabled)",
      "isRequired": true
    },
    "verificationfeaturevalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "verificationfeatureexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(VerificationFeature == \u0022Disabled\u0022)",
            "value": "0"
          },
          {
            "condition": "(VerificationFeature == \u0022Enabled\u0022)",
            "value": "1"
          }
        ]
      },
      "description": "Do you want to enable the verification status functionality? automatically selected based on VerificationFeature"
    },
    "CustomControl_TurnOffVerificationDialog": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "False"
        },
        {
          "choice": "True"
        }
      ],
      "description": "Verification Dialog does not show. (False: False; True: True)"
    },
    "turnoffverificationdialogvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "verificationdialogdisabledexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(TurnOffVerificationDialog == \u0022False\u0022)",
            "value": "false"
          },
          {
            "condition": "(TurnOffVerificationDialog == \u0022True\u0022)",
            "value": "true"
          }
        ]
      },
      "description": "Verification Dialog does not show. automatically selected based on TurnOffVerificationDialog"
    },
    "CustomControl_EnforceMobile": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Disabled"
        },
        {
          "choice": "Enabled"
        }
      ],
      "description": "Enforce mobile or allow landline? (Disabled: Disabled; Enabled: Enabled)"
    },
    "enforcemobilevalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "enforcemobileexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(EnforceMobile == \u0022Disabled\u0022)",
            "value": "0"
          },
          {
            "condition": "(EnforceMobile == \u0022Enabled\u0022)",
            "value": "1"
          }
        ]
      },
      "description": "Enforce mobile or allow landline? automatically selected based on EnforceMobile"
    },
    "CustomControl_CallFeature": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "Disabled"
        },
        {
          "choice": "Enabled"
        }
      ],
      "description": "Do you want to enable the call functionality? (Disabled: Disabled; Enabled: Enabled)",
      "isRequired": true
    },
    "callfeaturevalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "callfeatureexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(CallFeature == \u0022Disabled\u0022)",
            "value": "0"
          },
          {
            "condition": "(CallFeature == \u0022Enabled\u0022)",
            "value": "1"
          }
        ]
      },
      "description": "Do you want to enable the call functionality? automatically selected based on CallFeature"
    },
    "CustomControl_PlainPhone": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "plainphoneexampletype",
      "fileRename": "plainphoneexampletype",
      "description": "Binding field returning plain phone number"
    },
    "CustomControl_EnableCopyButton": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Enable click to copy button. (True: True; False: False)"
    },
    "enablecopybuttonvalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "clicktocopyenabledexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(EnableCopyButton == \u0022True\u0022)",
            "value": "true"
          },
          {
            "condition": "(EnableCopyButton == \u0022False\u0022)",
            "value": "false"
          }
        ]
      },
      "description": "Enable click to copy button. automatically selected based on EnableCopyButton"
    },
    "CustomControlFormFactor": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "customcontrolformfactorexample",
      "description": "Form factor for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "ControlId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "controlDescriptionIdexample",
      "description": "Control ID for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "isRequired": true,
      "replaces": "examplepublisherprefix",
      "description": "Publisher prefix for the custom control"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the control will be created"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the parameters will be added"
    }
  },
  "postActions": [
