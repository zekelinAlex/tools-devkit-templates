      "fileRename": "recordidexampletypesinglelinetext",
      "description": "Provide record id."
    },
    "CustomControl_SelfReferenceParentScope": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Do you filter by the same entity as shown in backlog? Only top-level tasks are enabled. ()"
    },
    "selfreferenceparentscopevalue": {
      "type": "generated",
      "generator": "switch",
      "replaces": "selfreferenceparentscopeexampletypeenum",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(SelfReferenceParentScope == \u0022True\u0022)",
            "value": "true"
          },
          {
            "condition": "(SelfReferenceParentScope == \u0022False\u0022)",
            "value": "false"
          }
        ]
      },
      "description": "Do you filter by the same entity as shown in backlog? Only top-level tasks are enabled. automatically selected based on SelfReferenceParentScope"
    },
    "CustomControl_BaseConfig": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "baseconfigexampletypemultiple",
      "fileRename": "baseconfigexampletypemultiple",
      "description": "Provide base configuration for TaskGrid control. (Temporary property)"
    },
    "CustomControl_Height": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "heightexampletypesinglelinetext",
      "fileRename": "heightexampletypesinglelinetext",
      "description": "Can be used to force the control to always stay at fixed height. Set to 100% if you want to leverage the Expand to full tab feature."
    },
    "CustomControlFormFactor": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "customcontrolformfactorexample",
      "description": "Form factor for the custom control. (This parameter is applicable in Custom control parameters)"
    },
    "ControlId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "unknown",
      "replaces": "controlDescriptionIdexample",
