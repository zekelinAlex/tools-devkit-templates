      "isRequired": true
    },
    "CustomControl_EntityName": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "defaulttemplateexample",
      "replaces": "entitynameexampletypesinglelinetext",
      "fileRename": "entitynameexampletypesinglelinetext",
      "description": "Provide entity logical name."
    },
    "CustomControl_RecordId": {
      "type": "parameter",
