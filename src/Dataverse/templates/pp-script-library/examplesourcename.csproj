<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <TypeScriptDir>$(MSBuildProjectDirectory)\TS</TypeScriptDir>
    <TypeScriptBuildDir>$(TypeScriptDir)\build</TypeScriptBuildDir>
    <RunNodeBuild Condition="'$(RunNodeBuild)'==''">true</RunNodeBuild>
  </PropertyGroup>

  <Target Name="BuildTypeScript" BeforeTargets="Build" Condition="'$(RunNodeBuild)'=='true'">
    <Message Text="Building TypeScript in $(TypeScriptDir)" Importance="High" />
    <Exec WorkingDirectory="$(TypeScriptDir)" Command="npm install" />
    <Exec WorkingDirectory="$(TypeScriptDir)" Command="npm run build" />
  </Target>

  <ItemGroup>
    <PackageReference Include="TALXIS.DevKit.Build.Dataverse.ScriptLibrary"
      Version="0.0.0.1"
      PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <None Include="TS\build\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>