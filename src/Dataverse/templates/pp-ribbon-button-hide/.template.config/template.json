{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.RibbonButtonHide",
  "name": "Power Platform: Ribbon Button Hide",
  "shortName": "pp-ribbon-button-hide",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplebuttonname",
  "sources": [
    {
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "*/**/[Bb]in/**",
        "*/**/[Oo]bj/**",
        "**/**/[Bb]in/**",
        "**/**/[Oo]bj/**",
        ".template.config/**/*"
      ]
    }
  ],
  "preferNameDirectory": true,
  "symbols": {
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": ".",
      "replaces": "SolutionDeclarationsRoot",
      "fileRename": "SolutionDeclarationsRoot",
      "description": "Path to the solution root directory"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplepublisher",
      "fileRename": "examplepublisher",
      "isRequired": true,
      "description": "Publisher prefix for the ribbon button (Example: new, talxis)"
    },
    "EntityLogicalName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "fileRename": "exampleentityname",
      "isRequired": true,
      "description": "Logical name of the entity where the ribbon button will be added"
    },
    "ButtonToHide": {
			"type": "parameter",
			"datatype": "choice",
			"isRequired": true,
			"choices": [
				{
					"choice": "New Record"
				}
			],
			"description": "Type of button to hide: New Record"
		}
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Hide.ps1\"",
        "redirectStandardOutput": "false"
      }
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      }
    }
  ]
}