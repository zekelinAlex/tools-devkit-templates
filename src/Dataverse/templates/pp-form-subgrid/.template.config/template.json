{
    "$schema": "http://json.schemastore.org/template",
    "author": "NETWORG",
    "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Subgrid",
    "name": "Power Platform: Form Subgrid",
    "shortName": "pp-form-subgrid",
    "tags": {
        "language": "XML",
        "type": "item"
    },
    "sourceName": "subgridconfig",
    "preferNameDirectory": false,
    "symbols": {
        "SolutionRootPath": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "SolutionDeclarationsRoot",
            "isRequired": true,
            "description": "Path to the solution root directory"
        },
        "CellId": {
            "type": "generated",
            "generator": "guid",
            "replaces": "cellidexample",
            "parameters": {
                "defaultFormat": "d"
            }
        },
        "SubgridLabel": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "subgridlabelexample",
            "isRequired": true,
            "displayName": "Subgrid Label Text",
            "description": "Display name for the subgrid section"
        },
        "ControlId": {
            "type": "generated",
            "generator": "guid",
            "replaces": "controlidexample",
            "parameters": {
                "defaultFormat": "d"
            }
        },
        "FormType": {
            "type": "parameter",
            "datatype": "choice",
            "isRequired": true,
            "replaces": "formtypeexample",
            "choices": [
                {
                    "choice": "main"
                },
                {
                    "choice": "quick"
                }
            ],
            "description": "Type of form where subgrid will be added: main (main form) or quick (quick create form)"
        },
        "FormId": {
            "type": "parameter",
            "datatype": "string",
            "isRequired": true,
            "defaultValue": "",
            "replaces": "formguididexample",
            "description": "GUID of the specific form where the subgrid will be added"
        },
        "TargetEntityLogicalName": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "targetentitytypeexample",
            "isRequired": true,
            "displayName": "Target Entity Logical Name",
            "description": "Entity whose records will be displayed in the subgrid (Example: contact, opportunity, custom_entity)"
        },
        "EntityLogicalName": {
            "type": "parameter",
            "datatype": "text",
            "replaces": "entitytypeexample",
            "isRequired": true,
            "displayName": "Entity Logical Name",
            "description": "Entity where the subgrid will be added (Example: account, contact, custom_entity)"
        },
        "ViewId": {
            "type": "generated",
            "generator": "guid",
            "replaces": "viewidexample",
            "parameters": {
                "defaultFormat": "d"
            }
        }
    },
    "postActions": [
        {
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "pwsh",
                "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/add.ps1\" ",
                "redirectStandardOutput": "false"
            },
            "manualInstructions": [
                {
                    "text": "Adding new row to form"
                }
            ],
            "continueOnError": false,
            "description": "Adding new row to form"
        },
        {
            "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
            "args": {
                "executable": "pwsh",
                "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
                "redirectStandardOutput": "false"
            },
            "manualInstructions": [
                {
                    "text": "Removing Scripts"
                }
            ],
            "continueOnError": false,
            "description": "Removing Scripts"
        }
    ]
}