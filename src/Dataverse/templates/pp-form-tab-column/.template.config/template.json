  "shortName": "pp-form-tab-column",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": true
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "Enter form Id"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "replaces": "formtypeexample",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        }
      ],
      "description": "Select a form type"
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "formguididexample",
      "description": "Enter form Id"
    },
    "TabNumber": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Enter tab number"
    },
    "ColumnWidth": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "100",
      "replaces": "columnwidthexample",
      "description": "Enter column width"
    }
  },
  "postActions": [
