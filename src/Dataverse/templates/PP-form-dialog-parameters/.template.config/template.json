{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Parameters",
  "name": "Power Platform: Parameters",
  "shortName": "PP-form-dialog-parameters",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "Enter form Id"
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabexampleid",
      "description": "Enter form Id"
    },
    "TabIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Enter tab number"
    },
    "LookupTargetEntityLogicalName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "targetentityexamplelogicalnaem",
      "description": "Enter target entity logical name"
    },
    "LookupTargetEntityDefaultViewId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "exampledefaultviewid",
      "description": "Enter target entity default view id"
    },
    "OptionSetName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "optinsetexamplename",
      "description": "Enter option set name"
    },
    "TabFooterId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "tabfooterexampleid",
      "parameters": {
        "defaultFormat": "d"
      }
    },
    "SetToTabFooter": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "False",
      "replaces": "settotabfooterchoice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ]
    },
    "ParameterType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "replaces": "parametertypechoice",
      "choices": [
        {
          "choice": "OptionSet"
        },
        {
          "choice": "Lookup"
        }
      ]
    },
    "ColumnIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "columnnumberexample",
      "description": "Enter column number"
    },
    "SectionIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionnumberexample",
      "description": "Enter section Index"
    },
    "SectionId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionidexample",
      "description": "Enter section id"
    },
    "RowIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "rownumberexample",
      "description": "Enter section Index"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Add.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new tab to form"
        }
      ],
      "continueOnError": false,
      "description": "Adding new tab to form"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}