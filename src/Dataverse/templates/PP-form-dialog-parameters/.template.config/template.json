{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Parameters",
  "name": "Power Platform: Parameters",
  "shortName": "PP-form-dialog-parameters",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the parameters will be added"
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabexampleid",
      "description": "GUID of the specific tab where the parameters will be added"
    },
    "TabIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Index number of the tab (1-based) where the parameters will be added"
    },
    "LookupTargetEntityLogicalName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "targetentityexamplelogicalnaem",
      "description": "Logical name of the target entity for lookup parameters (required when ParameterType is Lookup)"
    },
    "LookupTargetEntityDefaultViewId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "exampledefaultviewid",
      "description": "GUID of the default view for the lookup target entity (required when ParameterType is Lookup)"
    },
    "OptionSetName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "optinsetexamplename",
      "description": "Name of the option set for option set parameters (required when ParameterType is OptionSet)"
    },
    "TabFooterId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "tabfooterexampleid",
      "parameters": {
        "defaultFormat": "d"
      },
      "description": "Unique identifier for the tab footer (automatically generated GUID)"
    },
    "SetToTabFooter": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "False",
      "replaces": "settotabfooterchoice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Whether to add the parameters to the tab footer (True) or to the main tab content (False)"
    },
    "ParameterType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "replaces": "parametertypechoice",
      "choices": [
        {
          "choice": "OptionSet"
        },
        {
          "choice": "Lookup"
        }
      ],
      "description": "Type of parameters to add: OptionSet (for option set controls) or Lookup (for lookup controls)"
    },
    "ColumnIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "columnnumberexample",
      "description": "Index number of the column (1-based) within the tab where the parameters will be added"
    },
    "SectionIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionnumberexample",
      "description": "Index number of the section (1-based) within the column where the parameters will be added"
    },
    "SectionId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionidexample",
      "description": "GUID of the specific section where the parameters will be added"
    },
    "RowIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "rownumberexample",
      "description": "Index number of the row (1-based) within the section where the parameters will be added"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Add.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new tab to form"
        }
      ],
      "continueOnError": false,
      "description": "Adding new tab to form"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}