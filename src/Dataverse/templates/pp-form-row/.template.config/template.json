{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Rows",
  "name": "Power Platform: Entity Form Rows",
  "shortName": "pp-form-row",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "Enter form Id"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",

      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Select a form type"
    },
    "AttributeLogicalName": {
      "displayName": "Logical name",
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplecustomerow",
      "isRequired": true
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabexampleid",
      "description": "Enter tab Id"
    },
    "TabIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Enter tab number"
    },
    "ColumnIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "columnnumberexample",
      "description": "Enter column number"
    },
    "SectionIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionnumberexample",
      "description": "Enter section Штвуч"
    },
    "SectionId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionidexample",
      "description": "Enter section id"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Add.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new row to form"
        }
      ],
      "continueOnError": false,
      "description": "Adding new row to form"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}