{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Controls",
  "name": "Power Platform: Entity Form Control",
  "shortName": "pp-form-control",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the control will be created"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "ControlType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "description": "Data type of the attribute: Text, MultilineText, WholeNumber, Decimal, Float, Currency, DateTime, or Lookup",
      "choices": [
        {
          "choice": "Text"
        },
        {
          "choice": "MultilineText"
        },
        {
          "choice": "WholeNumber"
        },
        {
          "choice": "Decimal"
        },
        {
          "choice": "Float"
        },
        {
          "choice": "Currency"
        },
        {
          "choice": "DateTime"
        },
        {
          "choice": "Lookup"
        },
        {
          "choice": "OptionSet"
        },
        {
          "choice": "SubGrid"
        },
        { 
          "choice": "Button"
        }
      ]
    },
    "isReadOnly": {
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "false",
      "replaces": "isreadonlyexamplechoice",
      "description": "Whether the control is read-only (True) or writable (False)",
      "choices": [
        {
          "choice": "true"
        },
        {
          "choice": "false"
        }
      ]
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the cell will be added"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "SetToTabFooter": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "False",
      "replaces": "settotabfooterchoice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Whether to add the cell to the tab footer (True) or to the main tab content (False)"
    },
    "isUnbound": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "true",
      "replaces": "isunboundchoice",
      "choices": [
        {
          "choice": "true"
        },
        {
          "choice": "false"
        }
      ],
      "description": "Whether the control is unbound (not connected to entity field) - True for custom controls, False for entity fields"
    },
    "isRequired": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "false",
      "replaces": "isrequiredchoice",
      "choices": [
        {
          "choice": "true"
        },
        {
          "choice": "false"
        }
      ],
      "description": "Whether the field is required (True) or optional (False) for user input"
    },
    "controluniqueid": {
      "type": "generated",
      "generator": "guid",
      "replaces": "controluniqueidexample",
      "parameters": {
        "defaultFormat": "d"
      },
      "description": "Unique identifier for the control (automatically generated GUID)"
    },
    "classid": {
      "type": "generated",
      "generator": "switch",
      "replaces": "exampleclassid",
      "parameters": {
        "datatype": "string",
        "cases": [
          {
            "condition": "(ControlType == 'Text')",
            "value": "4273EDBD-AC1D-40d3-9FB2-095C621B552D"
          },
          {
            "condition": "(ControlType == 'MultilineText')",
            "value": "E0DECE4B-6FC8-4a8f-A065-082708572369"
          },
          {
            "condition": "(ControlType == 'WholeNumber')",
            "value": "C3EFE0C3-0EC6-42be-8349-CBD9079DFD8E"
          },
          {
            "condition": "(ControlType == 'Decimal')",
            "value": "C3EFE0C3-0EC6-42be-8349-CBD9079DFD8E"
          },
          {
            "condition": "(ControlType == 'Float')",
            "value": "0D2C745A-E5A8-4c8f-BA63-C6D3BB604660"
          },
          {
            "condition": "(ControlType == 'Currency')",
            "value": "533B9E00-756B-4312-95A0-DC888637AC78"
          },
          {
            "condition": "(ControlType == 'DateTime')",
            "value": "5B773807-9FB2-42db-97C3-7A91EFF8ADFF"
          },
          {
            "condition": "(ControlType == 'Lookup')",
            "value": "270BD3DB-D9AF-4782-9025-509E298DEC0A"
          },
          {
            "condition": "(ControlType == 'OptionSet')",
            "value": "3EF39988-22BB-4F0B-BBBE-64B5A3748AEE"
          },
          {
            "condition": "(ControlType == 'SubGrid')",
            "value": "E7A81278-8635-4D9E-8D4D-59480B391C5B"
          },
          {
            "condition": "(ControlType == 'Button')",
            "value": "00ad73da-bd4d-49c6-88a8-2f4f4cad4a20"
          }
        ]
      },
      "description": "Control class ID automatically selected based on ControlType (determines control behavior)"
    },
    "RowId": {
      "type": "generated",
      "generator": "guid",
      "dataType": "string",
      "replaces": "idexample",
      "description": "Unique identifier for the row containing the cell (automatically generated GUID)"
    },
    "AttributeLogicalName": {
      "displayName": "Logical name",
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplecustomerow",
      "isRequired": true,
      "description": "Logical name of the entity attribute/field that the control will display"
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabexampleid",
      "description": "GUID of the specific tab where the control will be added"
    },
    "TabIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Index number of the tab (1-based) where the control will be added"
    },
    "ColumnIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "columnnumberexample",
      "description": "Index number of the column (1-based) within the tab where the control will be added"
    },
    "SectionIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionnumberexample",
      "description": "Index number of the section (1-based) within the column where the control will be added"
    },
    "RowIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "rownumberexample",
      "description": "Index number of the row (1-based) within the section where the control will be added"
    },
    "SectionId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionidexample",
      "description": "GUID of the specific section where the control will be added"
    },
    "RowSpan": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": "ControlType == \"SubGrid\"",
      "defaultValue": "unknown",
      "replaces": "examplerowspanvalue",
      "description": "Row span of the subgrid control (only for subgrid control)"
    },
    "ColumnSpan": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": "ControlType == \"SubGrid\"",
      "defaultValue": "unknown",
      "replaces": "examplecolspanvalue",
      "description": "Column span of the subgrid control (only for subgrid control)"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Add.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new control to form"
        }
      ],
      "continueOnError": false,
      "description": "Adding new control to form"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}