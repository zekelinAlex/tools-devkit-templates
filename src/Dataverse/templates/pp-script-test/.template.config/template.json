{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "classifications": [ "TALXIS", "Dataverse", "Script Test" ],
  "identity": "TALXIS.DevKit.Templates.Dataverse.ScriptTest",
  "name": "TALXIS Script Test",
  "shortName": "pp-script-test",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "examplescripttestprojectname",
  "preferNameDirectory": true,
  "symbols": {
    "ScriptTestProjectName": {
      "type": "parameter",
      "isRequired": true,
      "datatype": "text",
      "replaces": "examplescripttestprojectname",
      "fileRename": "examplescripttestprojectname",
      "defaultValue": "Script.Tests",
      "description": "Name of the script test project (default: Script.Tests)"
    },
    "ScriptLibraryPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplescriptlibrarypath",
      "isRequired": true,
      "description": "Path to the script library project file"
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/installpacages.ps1\""
      },
      "manualInstructions": [
        {
          "text": "Installing npm packages"
        }
      ]
    },
    {
			"actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
			"args": {
				"executable": "pwsh",
				"args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
				"redirectStandardOutput": "false"
			},
			"manualInstructions": [{ "text": "Removing Scripts" }],
			"continueOnError": false,
			"description": "Removing Scripts"
		}
  ]
}
