{
  "$schema": "http://json.schemastore.org/template",
  "author": "NETWORG",
  "identity": "TALXIS.DevKit.Templates.Dataverse.UI.Tabs.Sections",
  "name": "Power Platform: Tab Section",
  "shortName": "pp-form-section",
  "tags": {
    "language": "XML",
    "type": "item"
  },
  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "EntitySchemaName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": false,
      "defaultValue": "unknown",
      "description": "Logical name of the entity for which the section will be created"
    },
    "SolutionRootPath": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "SolutionDeclarationsRoot",
      "isRequired": true,
      "description": "Path to the solution root directory"
    },
    "FormId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknownFormId",
      "replaces": "formguididexample",
      "description": "GUID of the specific form where the section will be added"
    },
    "FormType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "replaces": "formtypeexample",
      "defaultValue": "unknown",
      "choices": [
        {
          "choice": "main"
        },
        {
          "choice": "quick"
        },
        {
          "choice": "dialog"
        },
        {
          "choice": "unknown"
        }
      ],
      "description": "Type of form: main (main form), quick (quick create), dialog (dialog form), or unknown (auto-detect)"
    },
    "SetToTabFooter": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "False",
      "replaces": "settotabfooterchoice",
      "choices": [
        {
          "choice": "True"
        },
        {
          "choice": "False"
        }
      ],
      "description": "Whether to add the section to the tab footer (True) or to the main tab content (False)"
    },
    "TabId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabexampleid",
      "description": "GUID of the specific tab where the section will be added"
    },
    "TabIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "tabnumberexample",
      "description": "Index number of the tab (1-based) where the section will be added"
    },
    "ColumnIndex": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "columnnumberexample",
      "description": "Index number of the column (1-based) within the tab where the section will be added"
    },
    "SectionName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "GENERAL",
      "replaces": "sectionnameexample",
      "description": "Display name for the section header"
    },
    "SectionId": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "defaultValue": "unknown",
      "replaces": "sectionidexample",
      "description": "Unique identifier for the section (GUID format)"
    },
    "SectionLabelId": {
      "type": "generated",
      "generator": "guid",
      "isRequired": false,
      "replaces": "sectionlabelexampleid",
      "description": "Enter section label id",
      "parameters": {
        "defaultFormat": "d"
      }
    }
  },
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/SetVariables.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Setting variables for new section"
        }
      ],
      "continueOnError": false,
      "description": "Setting variables for new section"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Add.ps1\" ",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Adding new tab to form"
        }
      ],
      "continueOnError": false,
      "description": "Adding new tab to form"
    },
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "pwsh",
        "args": "-noprofile -executionpolicy bypass -File \"./.template.scripts/Cleanup.ps1\"",
        "redirectStandardOutput": "false"
      },
      "manualInstructions": [
        {
          "text": "Removing Scripts"
        }
      ],
      "continueOnError": false,
      "description": "Removing Scripts"
    }
  ]
}